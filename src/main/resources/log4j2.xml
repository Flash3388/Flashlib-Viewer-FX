<Configuration name="FlashLib" status="ERROR" monitorInterval="5">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%c] %-5level - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="FlashLib" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="FlashLib.Comm.HFCSService" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="FlashLib.Comm.OBSRNode" level="info" additivity="false">

        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
